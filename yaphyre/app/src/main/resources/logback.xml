<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %-36.36logger - %msg%n</pattern>
        </encoder>
    </appender>

    <!--<logger name="yaphyre.core.films" level="debug"/>-->

    <!--<logger name="yaphyre.core.api" level="debug"/>-->

    <!--<logger name="yaphyre.core.tracers" level="debug"/>-->

    <!--<logger name="yaphyre.core.lights" level="trace"/>-->

    <!--<logger name="yaphyre.core.shapes.SimpleSphere" level="trace"/>-->

    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
