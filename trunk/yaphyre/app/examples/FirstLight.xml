<simpleScene xmlns="http://www.zweivelo.ch/yaphyre/simple">

    <globalSettings>
        <surfaceIntegrator>RayCaster</surfaceIntegrator>
        <cameraSampler>
            <method>halton</method>
            <samples>4</samples>
        </cameraSampler>
        <lightSampler>
            <method>single</method>
        </lightSampler>
        <defaultSampler>
            <method>single</method>
        </defaultSampler>
    </globalSettings>

    <cameras>
        <perspectiveCamera name="FirstLight">
            <filetype>PNG</filetype>
            <resolution>640 480</resolution>
            <position>10 10 -10</position>
            <lookAt>0 0 0</lookAt>
            <up>0 1 0</up>
            <skycolor>0 0 .25</skycolor>
            <fov>.5482</fov>
            <aspectRatio>1.33333</aspectRatio>
        </perspectiveCamera>
    </cameras>

    <lights>
        <ambientLight>
            <power>.025</power>
        </ambientLight>
        <pointLight>
            <power>10</power>
            <color>.95 .95 .95</color>
            <position>15 15 15</position>
        </pointLight>
    </lights>

    <geometry>
        <simpleSphere name="sphere">
            <transformation>
                <translate>
                    <offsets>0 1.1 0</offsets>
                </translate>
            </transformation>
            <shaderRef>white</shaderRef>
        </simpleSphere>
        <plane name="plane">
            <transformation>
                <identity/>
            </transformation>
            <shaderRef>white</shaderRef>
        </plane>
    </geometry>

    <shaders>
        <colorShader name="colorWhite" id="white">
            <color>.95 .95 .95</color>
        </colorShader>
    </shaders>

</simpleScene>