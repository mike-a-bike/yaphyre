<?xml version="1.0" encoding="UTF-8"?>

<scene>

	<!-- Perspective Camera -->
	<camera id="camera" type="perspective">

		<!-- located at 0, 25, 100, looking at 0, 1, 0, up is along the Y axis -->
		<transform>
			<lookAt>
				<eye x="0" y="25" z="100"/>
				<look-at x="0" y="1" z="0"/>
				<up x="0" y="1" z="0"/>
			</lookAt>
		</transform>

		<!-- Type specific settings -->
		<!-- Aspect ratio: 4/3 (1280/960) -> Square Pixels, Lens: 50mm (fov 40), Depth of field: 100 units, Aperture: 1 unit -->
		<property name="aspect-ratio" value="1.333333"/>
		<property name="fov" value="40"/>
		<property name="dof" value="100"/>
		<property name="aperture" value="1"/>

		<!-- Film (ImageFile) -->
		<film type="imageFile">
			<property name="xRes" value="1280"/>
			<property name="yRes" value="960"/>
			<property name="fileType" value="png"/>
			<property name="gamma" value="2.4"/>
		</film>

	</camera>

	<!-- Diffuse Material ambient light: 0.075 diffuse: 0.8 -->
	<material id="diffuse" ambient="0.075" diffuse="0.8"/>

	<!-- Shader material: diffuse color: white -->
	<shader id="white" type="simple">
		<material ref="diffuse"/>
		<property name="color">
			<color r="1" g="1" b="1"/>
		</property>
	</shader>

	<shader id="gradient" type="gradient">
		<material ref="diffuse"/>
		<property name="fromColor">
			<color r="1" g="0" b="0"/>
		</property>
		<property name="toColor">
			<color r="0" g="0" b="1"/>
		</property>
		<property name="direction" value="uAxis"/>
	</shader>

	<!-- Point light position: 0, 0, 0 translate to: -2, 5, 2 -->
	<light id="light" type="point">
		<color r="1" g="1" b="1"/>
		<intensity value="10"/>
		<transform>
			<translate dx="-2" dy="5" dz="2"/>
		</transform>
	</light>

	<!-- Sphere center: 0, 1, 0; radius: 1; phi: 45-135deg theta: 45-135deg -->
	<sphere>
		<shader ref="gradient"/>
		<transform>
			<translate dx="0" dy="1" dz="0"/>
		</transform>
		<property name="phiStart" value="45"/>
		<property name="phiEnd" value="135"/>
		<property name="thetaStart" value="45"/>
		<property name="thetaEnd" value="135"/>
	</sphere>

	<!-- Plane normal: 0, 1, 0 (y-axis) offset: 0 -->
	<plane>
		<shader ref="white"/>
	</plane>

</scene>